extends ../base.jade

block content
  h3 Entity
    small

  .btn-group
    a(href="/entities/#{entity.id}/edit", class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit entity
    a(href="/entities/#{entity.id}/delete", class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete entity

  .media
    .media-body
      h4= entity.title
        | &nbsp;
        small= entity.publishedDate
      h5 By #{entity.author||'unknown'}
      p= entity.description
